<%= content_for :swiper_css do %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.1/css/swiper.min.css">
<% end %>

<div class="container">
  <div class="side-menu">
    <%= render 'layouts/admin_common' %>

    <div class="tab-content article-content">
      <h2>記事</h2>

      <div class="row-content">
        <% (1..5).each do |n| %>
          <a href="/articles/<%= n %>" class="none-style-anker">
            <div class="card">
              <p class="art-date">2018/10/02</p>
              <%= image_tag 'sample.jpg', width: '100%', height: '30%' %>
              <h2 class="card-title">はじめて作るRailsアプリケーションで絶対に成功する方法</h2>
            </div>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>
