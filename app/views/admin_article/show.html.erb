<div class="container">
  <div class="side-menu">
    <%= render 'layouts/admin_common' %>

    <div class="tab-content article-content">
      <h2><%= @article[:content_title] %></h2>
      <div class="row">
        <%= form_for :articles, url: admin_user_articles_path, html: {method: 'post'} do |f| %>
          <label class="label label-font" for="title">タイトル</label>
          <%= f.text_field :content_title, class: 'input input-row input-bd', id: 'title', placeholder: 'タイトルを入力して下さい', value: @article[:content_title] %>

          <label class="label label-font" for="url">URL</label>
          <%= f.text_field :content_url, class: 'input input-row input-bd', id: 'url', placeholder: 'URLを入力して下さい', value: @article[:content_url] %>

          <label class="label label-font" for="meta-descriptiton">メタディスクプリション</label>
          <%= f.text_area :meta_descritption, class: 'input input-bd', id: 'meta-descritption', size: '40x10', placeholder: 'メタディスクプリションを120文字以内で入力して下さい', value: @article[:meta_description] %>

          <label class="label label-font" for="category">カテゴリ</label>
          <%= f.text_field :category_name, class: 'input input-row input-bd', id: 'category', placeholder: 'カテゴリを入力して下さい', value: @category[:category_name] %>

          <label class="label label-font" for="article">記事</label>
          <%= f.text_area :content_text, class: 'input input-bd', id: 'contents', size: '40x120', value: @article[:content_text] %>

          <%= f.label :open_status, class: 'input-checkbox' do %>
            <%= f.check_box :open_status %>
            <span>下書きとして保存する</span>
          <% end %>

          <%= f.label :fixed_status, class: 'input-checkbox' do %>
            <%= f.check_box :fixed_status %>
            <span>固定記事として保存する</span>
          <% end %>

          <%= f.submit :publish, class: 'button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>