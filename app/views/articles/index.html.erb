<%= content_for :swiper_css do %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.1/css/swiper.min.css">
<% end %>

<div class="container">
  <div class="row">
    <div class="row-content">
      <h1 class="original-title btm-line btm-line-blue"><i class="material-icons">done</i>人気の記事</h1>
    </div>

    <div class="row-content">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          <% @famous_articles.each do |article| %>
          <div class="swiper-slide">
            <p class="art-date"><%= article[:updated_at].strftime('%Y/%m/%d') %></p>
            <a href="/articles<%= article[:content_url] %>">
            <% article.top_image.attached? %>
              <%= image_tag article.top_image, width: '100%', height: '30%', class: 'famous-img' %>
            <% end %>
            </a>
            <h2 class="card-title over-title white-text"><%= article[:content_title] %></h2>
          </div>
          <% end %>
        </div>

        <div class="swiper-pagination"></div>

        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="row-content">
      <h1 class="original-title btm-line btm-line-blue"><i class="material-icons">done</i>最近の記事</h1>
    <div>

    <div class="row-content">
      <% @articles.each do |article| %>
        <a href="/article<%= article[:content_url] %>" class="none-style-anker">
          <div class="card">
            <p class="art-date"><%= article[:updated_at].strftime('%Y/%m/%d') %></p>
            <a href="/articles<%= article[:content_url] %>">
            <% article.top_image.attached? %>
              <%= image_tag article.top_image, width: '100%', height: '30%' %>
            <% end %>
            </a>
            <h2 class="card-title"><%= article[:content_title] %></h2>
          </div>
        </a>
      <% end %>
    </div>
  </div>
  
</div>

<% content_for :swipe_js do%>
  <%= javascript_include_tag 'swipe', 'data-turbolinks-track': 'reload' %>
<% end %>