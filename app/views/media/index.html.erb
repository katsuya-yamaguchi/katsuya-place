<div class="container">
  <div class="side-menu">
    <%= render 'layouts/admin_common' %>

    <div class="tab-content media-content">
      <h2>メディア</h2>
      <div class="row row-media">
        <% @medium.each do |f| %>
          <%= image_tag f.avatar, width: '25%', height: '30%' %>
          <label class="label label-font"><%= f.avatar.filename %></label>
        <% end %>
      </div>
      <div class="row row-upload-button">
        <a href='<%= admin_user_media_upload_path %>'><button type="submit" class="button-upload">アップロード</button></a>
      </div>
    </div>
  </div>
</div>