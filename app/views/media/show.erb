<div class="container">
  <div class="side-menu">
    <%= render 'layouts/admin_common' %>

    <div class="tab-content media-content">
      <h2>メディア</h2>
      <ul class="breadcrumb">
        <li itemscope="itemscope" itemtype="http://data-vocabulary.org/Breadcrumb">
          <a href="../media" itemprop="url">
            <span itemprop="title">media</span>
          </a>
        </li>
        <li itemscope="itemscope" itemtype="http://data-vocabulary.org/Breadcrumb">
          <span itemprop="title">sample.jpg</span>
        </li>
      </ul>
      <%= image_tag 'sample.jpg', width: '100%', height: '30%' %>
      <div class="row">
        <form action="#" method="post">
          <label class="label label-font" for="title">URL</label>
          <input class="input input-row input-bd" type="text" id="title" placeholder="URLを入力して下さい">

          <label class="label label-font" for="title">サイズ</label>
          <input class="input input-row input-bd" type="text" id="title" placeholder="サイズを[1200*30]の形式で入力して下さい">
          <button type="submit" class="button-upload">アップロード</button>
        </form>
      </div>
    </div>
  </div>
</div>