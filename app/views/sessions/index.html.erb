<div class="container">
  <div class="row">
    <div class="row-content">
      <h1>Sign In</h1>
    <div>

    <div class="row-content">
    <% flash.each do |type, message| %>
      <p class="err-msg"><%= type %> <%= message %></p>
    <% end %>
      <%= form_for :sessions, url: login_path, html: {method: 'post'} do |f| %>
        <%= f.text_field :email, class: 'input-username', id: 'username', placeholder: 'User Name' %>
        <%= f.password_field :password, class: 'input-password', id: 'password', placeholder: 'Password' %>
        <%= f.label :remember_me, class: 'input-checkbox' do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
        <% end %>
        <%= f.submit :LOGIN, class: 'button' %>
      <% end %>
    </div>
  </div>
  
</div>
